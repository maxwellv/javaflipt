extends ../shared/template

block content
  h1= title
  if !user
    .row
      .small-6.columns
        form(method='post', action='/auth')
          fieldset#register
            legend Register
            .row
              .small-12.columns
                label Email
                input(name='email', type='email', autofocus=true)
                label Name
                input(name='name', type='text')
                label Password
                input(name='password', type='password')
            .row
              .small-12.columns
                button.small.radius Register
      .small-6.columns
  else
    h1 You're already logged in! 
      a(href='/') Go back to the home page.

